<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/formRegitro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textRegistro"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:fontStyle="italic"
            android:text="Registro"
            android:textColor="@color/BLANCO"
            android:textSize="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="45dp"></TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="115dp">

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="115dp"
            android:background="@drawable/rectangulo"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:text="Nombre"
                android:textColor="@color/NEGRO"
                android:textSize="22dp"
                android:layout_marginVertical="5dp"/>

            <AutoCompleteTextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/cuadro1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:text="Apellido"
                android:textColor="@color/NEGRO"
                android:textSize="22dp"
                android:layout_marginVertical="5dp"/>

            <AutoCompleteTextView
                android:id="@+id/apellido"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/cuadro1"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/textCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:text="Correo"
                android:textColor="@color/NEGRO"
                android:textSize="22dp"
                android:layout_marginVertical="5dp"/>

            <AutoCompleteTextView
                android:id="@+id/Correo_Electronico"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/cuadro1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:text="Contraseña"
                android:textColor="@color/NEGRO"
                android:textSize="22dp"
                android:layout_marginVertical="5dp"/>

            <AutoCompleteTextView
                android:id="@+id/Contraseña"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/cuadro1"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/Crear"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="485dp"
        android:text="Registrar" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="485dp"
        android:text="Cancelar" />

</RelativeLayout>